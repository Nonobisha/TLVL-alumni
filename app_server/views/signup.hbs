    <script>
       
function chooseAddr(lat1, lng1, lat2, lng2, display_name) {
    console.log(lat1 + "/" + lng1 + "/" + display_name);
    $('#results').empty();
    $("#realAddr").val(lat1 + "/" +  lng1);
	$("#lat").val(lat1);
	$("#lon").val(lng1);
    $("#display_name").val(display_name);
  
}

function addr_search() {
    var inp = document.getElementById("addr");
    
    $.getJSON('http://nominatim.openstreetmap.org/search?format=json&limit=1&city=' + inp.value, function(data) {
        var items = [];
          if(data.length != 0) {
            console.log(data.length);
        $.each(data, function(key, val) {
            bb = val.boundingbox;
           items.push("<b>Вы выбрали адрес: </b>" + val.display_name);
            chooseAddr(+ bb[0], bb[2], bb[1], bb[3], val.display_name);

        });


      
    }
    else if(data.length == 0){
         console.log("No location found");
    items.push("<p><b>Город не найден.</b></p>");
}
  $('#results').empty();
            $('<ul/>', {
                'class': 'my-new-list',
                html: items.join('')
            }).appendTo('#results');
    });
}
</script>


